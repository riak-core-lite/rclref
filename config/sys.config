%% -*- mode: erlang; -*-
[
 { rclref, [
            {storage_backend, ets},
            {merge_strategy, none},
            {n_val, 3},
            {r_val, 1}, % n_val >= r_val
            {w_val, 1}, % n_val >= w_val
            {timeout_put, 20000},
            {timeout_get, 20000},
            {timeout_coverage, infinity},
            {http_port, 9180},
            {http_acceptors, 2},
            {http_max_connections, infinity}
           ]},
  %% logger config
  {kernel, [

    % logger formatters (level: emergency | alert | critical | error | warning | notice | info | debug)
    {logger, [
      {handler, default, logger_std_h,
        #{level => notice,
          formatter => {logger_formatter, #{single_line => false, max_size => 2048}},
          config => #{type => standard_io}}}
    ]},

    % main level
    {logger_level, info}
  ]},


  {riak_core, [
    %% riak directories
    {ring_state_dir, "data/dev/data_riak_core"},
    {platform_data_dir, "data/dev/data_riak_core"},

    %% determines how many vnodes will be used
    %% also determines the number of files the log is sliced into
    %% has to be an exponent of 2
    %% low number will decrease file accesses (good for testing) and boot time
    %% high number enables scaling and generates smaller log files
    {ring_creation_size, 8},

    {handoff_port, 8099}
  ]}
].
